{
  "name": "image-optimizer",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:verbose": "vitest run --reporter verbose",
    "build": "npm run clean && npm run build:api && npm run build:worker && npm run build:libs && npm run build:shared",
    "build:api": "babel apps/api/src --extensions '.ts' --out-dir dist/apps/api/src --copy-files",
    "build:worker": "babel apps/worker/src --extensions '.ts' --out-dir dist/apps/worker/src --copy-files",
    "build:libs": "babel libs --extensions '.ts' --out-dir dist/libs --copy-files",
    "build:shared": "babel shared --extensions '.ts' --out-dir dist/shared --copy-files",
    "build:scripts": "babel libs/scripts --extensions '.ts' --out-dir dist/libs/scripts --copy-files",
    "seed": "npm run build:scripts && node dist/libs/scripts/seed.js",
    "start:api": "node dist/api/main.js",
    "start:worker": "node dist/worker/main.js",
    "typecheck": "tsc --noEmit"
  },
  "license": "ISC",
  "dependencies": {
    "@fastify/multipart": "^9.0.3",
    "@types/pino": "^7.0.4",
    "amqplib": "^0.10.8",
    "dotenv": "^16.5.0",
    "exif-reader": "^2.0.2",
    "fastify": "^5.3.3",
    "mongoose": "^8.15.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "sharp": "^0.34.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.0",
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@types/amqplib": "^0.10.7",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.15.18",
    "babel-plugin-add-import-extension": "^1.6.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.4"
  }
}
